{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "sku": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "cost": {
      "type": "number",
      "minimum": 0
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "available": {
      "type": "boolean"
    },
    "inventoryCount": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": ["sku", "name", "price", "cost"]
}
